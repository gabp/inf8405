<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
	    <ImageView
	        android:id="@+id/scores_top"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.1"
	        android:background="@android:color/transparent"
	        android:scaleType="fitCenter"
	        android:src="@drawable/scores_top" />
	    
	    <ImageView
	        android:id="@+id/scores_mid"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
			android:layout_weight="0.57"			android:background="@android:color/transparent"
	        android:src="@drawable/scores_mid" />
	    
	    <ImageView
	        android:id="@+id/scores_bot"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
			android:layout_weight="0.33"
	        android:background="@android:color/transparent"
	        android:scaleType="fitXY"
	        android:src="@drawable/scores_bot" />

    </LinearLayout>
</RelativeLayout>
